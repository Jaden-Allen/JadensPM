<UserControl x:Class="Jadens_Manager.LabeledProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jadens_Manager"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="5">
        <!-- First TextBox with Placeholder -->
        <Grid Margin="5">
            <TextBox Text="Username" 
                     x:Name="UsernameProp"
                     FontSize="16" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Width="150" 
                     Background="#FF252525" Foreground="White" SelectionBrush="#FF689AC1" />
        </Grid>

        <!-- Second TextBox with Placeholder -->
        <Grid Margin="5">
            <TextBox Text="Password" 
                     x:Name="PasswordProp"
                     FontSize="16" 
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus" 
                     Width="150" 
                     Background="#FF252525" Foreground="White" SelectionBrush="#FF689AC1" />
        </Grid>
    </StackPanel>
</UserControl>
